# PostgreSQL Configuration
POSTGRES_DB=pennywise
POSTGRES_USER=pennywise
POSTGRES_PASSWORD=pennywise_password

# Backend Configuration
# To run in Production mode, upddate the ASPNETCORE_ENVIRONMENT variable below
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
ConnectionStrings__DefaultConnection=Host=postgres;Database=pennywise;Username=pennywise;Password=pennywise_password

# CORS Configuration (comma-separated origins allowed to access the API)
Cors__AllowedOrigins__0=http://localhost:3000
Cors__AllowedOrigins__1=http://localhost:5173
# Add your DuckDNS or custom domain:
# Cors__AllowedOrigins__2=http://yoursubdomain.duckdns.org:3000

# Google Authentication
# Get your Client ID from Google Cloud Console (see README-auth.md)
Authentication__Google__ClientId=your-google-client-id.apps.googleusercontent.com
# Set to false for self-hosted deployments without HTTPS (e.g., Raspberry Pi, home server)
# Set to true (or omit) for cloud deployments with HTTPS
Authentication__RequireHttps=false

# Splitwise Integration
# Get your API key from https://secure.splitwise.com/apps
Splitwise__ApiKey=your-splitwise-api-key

# Frontend Configuration (for Vite)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_API_URL=http://localhost:8080
